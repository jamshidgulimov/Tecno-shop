    
    {{#if myProduct.length}}
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 p-3">
    
        {{#each myProduct}}

         <div class="col">
          <div class="card shadow-sm">
            <img src="{{image}}">
            <div class="card-body">
              <p class="card-text fs-5">{{title}}</p>
              <p class="card-text">{{description}}</p>
               <div class="avtor bg-primary"> <h5>{{user.firstName}} {{user.lastName}}</h5>
               </div>
              <div class="d-flex justify-content-end align-items-center">
              
        
                <h4>{{price}}.0sum</h4>
              </div>
              <div>{{formatDate createdAt}}</div>
            </div>
           
          </div>
        </div>

        {{/each}}
</div>
{{else}}
<section class='page_404 w-75 mx-auto'>
		<div class='row'>
			<div class='col-sm-12'>
				<div class='col-sm-10 col-sm-offset-1 text-center'>
					<div class='four_zero_four_bg'>
						<h1 class='text-center'>404</h1>
					</div>
					<div class='contant_box_404'>
						<h3 class='h2'>
							Add new products
						</h3>
						<a href='/add' class='btn btn-primary btn-lg mb-5'>Add products</a>
					</div>
				</div>
			</div>
		</div>
	</section>

{{/if}}
