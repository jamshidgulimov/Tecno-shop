

   <div class="w-50 mx-auto">
    <h1>Edit Product - {{product.title}}</h1>
        {{#if errorEditProduct}}
<div class="alert alert-danger alert-dismissible fade show danger" role="alert">
  <strong>Error</strong>
  {{errorEditProduct}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

    <form action="/edit-product/{{product._id}}" method="post">
    
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" value="{{product.title}}" name="title" placeholder="title">
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
  <textarea class="form-control" placeholder="Description" name="description" id="floatingTextarea2" style="height: 100px">{{product.description}}</textarea>
  <label for="floatingTextarea2">Description</label>
</div>
    <div class="form-floating mb-3">
      <input type="text" value="{{product.image}}" class="form-control" id="floatingInput" name="image" placeholder="Image">
      <label for="floatingInput">Image</label>
    </div>
    <div class="input-group mb-3">
  <span class="input-group-text">$</span>
  <div class="form-floating">
    <input type="number" value="{{product.price}}" class="form-control" name="price" id="floatingInputGroup1" placeholder="Price">
    <label for="floatingInputGroup1">Price</label>
  </div>
</div>
    <button class="btn btn-primary w-100 py-2" type="submit">Edit product</button>

    </form>
   </div>