<div class='row'>
	<div class='col-md-6'>
		<img src='/log.jpg' width='100%' />
	</div>
	<div class='col-md-6'>
		<div class='mt-10rem w-75 mx-auto'>
<h1 class="h3 mb-3 fw-normal">Please sign in</h1>
{{#if loginError}}
<div class="alert alert-danger alert-dismissible fade show danger" role="alert">
  <strong>Error</strong>{{loginError}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<form action="/login" method="post">
    
    <div class="form-floating">
      <input type="email" class="form-control" id="floatingInput" name="email" placeholder="Email">
      <label for="floatingInput">Email address</label>
    </div>
    <div class="form-floating">
      <input type="password" class="form-control" name="password" id="floatingPassword" placeholder="Password">
      <label for="floatingPassword">Password</label>
    </div>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
    <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
    <p class="mt-5 mb-3 text-body-secondary">© 2017–2023</p>
  </form>
  </div>