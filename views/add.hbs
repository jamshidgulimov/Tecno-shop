<div class='row'>
	<div class='col-md-6'>
		<div class='mt-5rem'>
    <h1>Add Product</h1>
    {{#if errorAddProduct}}
<div class="alert alert-danger alert-dismissible fade show danger" role="alert">
  <strong>Error</strong>
  {{errorAddProduct}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
    <form action="/add-products" method="post">
    
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" name="title" placeholder="title">
      <label for="floatingInput">Title</label>
    </div>
    <div class="form-floating mb-3">
  <textarea class="form-control" placeholder="Description" name="description" id="floatingTextarea2" style="height: 100px"></textarea>
  <label for="floatingTextarea2">Description</label>
</div>
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="floatingInput" name="image" placeholder="Image">
      <label for="floatingInput">Image</label>
    </div>
    <div class="input-group mb-3">
  <span class="input-group-text">$</span>
  <div class="form-floating">
    <input type="number" class="form-control" name="price" id="floatingInputGroup1" placeholder="Price">
    <label for="floatingInputGroup1">Price</label>
  </div>
</div>
    <button class="btn btn-primary w-100 py-2" type="submit">Add product</button>

    </form>
   </div>
   </div>
   <div class='col-md-6'>
		<img src='/add.jpg' width='100%' alt='' />
   </div>
	</div>